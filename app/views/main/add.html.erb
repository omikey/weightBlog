<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="app">
<div ng-controller="add" id="main">
  <% if session[:show_menu] %>
  <input type="hidden" id="s3_direct_post" value='<%= @s3_direct_post.fields.to_json.html_safe %>' />
  <input type="hidden" id="post_url" value='<%= @post_url %>' />
  <input type="hidden" id="policy" value='<%= @policy %>' />
  <input type="hidden" id="siggy" value='<%= @siggy %>' />
  <% end %>
  <span id="title">
    mikey's blog
  </span>
  <div id="backmesh"></div>
  <div id="content">
    always fascinating
    <div id="blog">
      <div id="center">
        <span class="noselect"><< </span>
          <span class="noselect" ng-bind="date">
          </span>
        <span class="noselect"> >></span>
        <br />
        <span style="font-weight: 600" class="button noselect" ng-click="stylize(false,$event,0)">B</span>
        <span style="font-style: italic" class="button noselect" ng-click="stylize(false,$event,1)">I</span>
        <span style="text-decoration: underline" class="button noselect" ng-click="stylize(false,$event,2)">U</span>
        <span class="button noselect" ng-click="focuser()">text</span>
        <span ng-click="getFile('snd')" class="button noselect">sound</span>
        <span ng-click="getFile('pic')" class="button noselect">image</span>
        <input type="file" id="editFile" class="hidden">
        <span ng-click="stylize(false,$event,3)" class="button noselect">font size:</span>
        <input type="text" placeholder="16px" style="width:3em" />
        <input ng-model="copylink" type="text" placeholder="Enter URL here to create a" />
        <span ng-click="setLink($event)" style="color: white; text-decoration: underline" class="button noselect">link</span>
        <span>size:</span>
        <input type="text" ng-model="size" style="width: 36px" />
        <span ng-click="submit()" id="send" class="button noselect">submit</span>
        <br />
      </div>
      <div id="left">
          <span contenteditable="true" id="html"></span>
      </div>
    </div>
  </div>
  <div id="corner-click" ng-click="switchBack()"></div>
</div>
</body>
</html>